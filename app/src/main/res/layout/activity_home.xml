<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jeff.game24app.HomeActivity"
    android:background="@color/background_gray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_home_screen" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="@dimen/play_dimen"
        android:layout_height="@dimen/play_dimen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/play_bottom_offset"
        android:background="@drawable/ic_play_button"
        android:contentDescription="Play"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="@dimen/smaller_button_dimen"
        android:layout_height="@dimen/smaller_button_dimen"
        app:layout_constraintBottom_toBottomOf="@id/start"
        app:layout_constraintTop_toTopOf="@id/start"
        app:layout_constraintRight_toLeftOf="@+id/start"
        android:layout_marginRight="@dimen/play_horizontal_margin"
        android:layout_marginTop="@dimen/play_vertical_margin"
        android:background="@drawable/ic_settings_button"
        android:contentDescription="Settings" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="@dimen/smaller_button_dimen"
        android:layout_height="@dimen/smaller_button_dimen"
        app:layout_constraintBottom_toBottomOf="@id/start"
        app:layout_constraintTop_toTopOf="@id/start"
        app:layout_constraintLeft_toRightOf="@id/start"
        android:layout_marginLeft="@dimen/play_horizontal_margin"
        android:layout_marginTop="@dimen/play_vertical_margin"
        android:background="@drawable/ic_help_button"
        android:contentDescription="Help" />

    <org.jeff.game24app.views.HomeButton
        android:id="@+id/time_trial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"
        android:text="@string/time_trial"
        style="@style/HomeButton"
        android:visibility="visible" />

    <org.jeff.game24app.views.HomeButton
        android:id="@+id/free_play"
        style="@style/HomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_trial" />

    <org.jeff.game24app.views.HomeButton
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_play"
        android:text="Mode: Fractions"
        style="@style/HomeButton" />

    <org.jeff.game24app.views.HomeButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/difficulty"
        android:text="@string/back"
        style="@style/HomeButton" />

</android.support.constraint.ConstraintLayout>