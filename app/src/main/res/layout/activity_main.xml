<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jeff.game24app.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/num_tile_group"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/op_tile_group">

        <org.jeff.game24app.tiles.NumberTile
            android:id="@+id/tile0"
            style="@style/NumTile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <org.jeff.game24app.tiles.NumberTile
            android:id="@+id/tile1"
            style="@style/NumTile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <org.jeff.game24app.tiles.NumberTile
            android:id="@+id/tile2"
            style="@style/NumTile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <org.jeff.game24app.tiles.NumberTile
            android:id="@+id/tile3"
            style="@style/NumTile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/op_tile_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_tile_group"
        app:layout_constraintBottom_toTopOf="@+id/buttons">

        <org.jeff.game24app.tiles.OperationTile
            android:id="@+id/tile_add"
            style="@style/OpTile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tile_subtract"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:operation="add" />

        <org.jeff.game24app.tiles.OperationTile
            android:id="@+id/tile_subtract"
            style="@style/OpTile"
            app:layout_constraintStart_toEndOf="@id/tile_add"
            app:layout_constraintEnd_toStartOf="@+id/tile_multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:operation="subtract" />

        <org.jeff.game24app.tiles.OperationTile
            android:id="@+id/tile_multiply"
            style="@style/OpTile"
            app:layout_constraintStart_toEndOf="@id/tile_subtract"
            app:layout_constraintEnd_toStartOf="@+id/tile_divide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:operation="multiply" />

        <org.jeff.game24app.tiles.OperationTile
            android:id="@+id/tile_divide"
            style="@style/OpTile"
            app:layout_constraintStart_toEndOf="@id/tile_multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:operation="divide" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/op_tile_group"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/new_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:contentDescription="new"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/restart_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh_black_24dp"
            android:contentDescription="restart"
            app:layout_constraintStart_toEndOf="@id/new_button"
            app:layout_constraintEnd_toStartOf="@+id/hint_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lightbulb_outline_black_24dp"
            android:contentDescription="hint"
            app:layout_constraintStart_toEndOf="@id/restart_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
